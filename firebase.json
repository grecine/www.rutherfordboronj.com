{
  "hosting": {
    "public": "_site",
    "ignore": [
      "firebase.json",
      "Gemfile",
      "Gemfile.lock",
      "README.md",
      "scripts"
    ],
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/contacts/",
        "destination": "/departments/",
        "type": 301
      }
    ]
  }
}
