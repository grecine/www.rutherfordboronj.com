{
  "hosting": {
    "public": "_site",
    "ignore": [
      "firebase.json"
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=2"
          }
        ]
      }
    ],
    "redirects": [
      {
        "source": "/contacts/",
        "destination": "/departments/",
        "type": 301
      }
    ]
  }
}
